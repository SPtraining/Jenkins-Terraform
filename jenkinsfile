pipeline {
    agent any

    
    environment {
       AWS_ACCESS_KEY_ID     = credentials('d55aab18-9c84-473d-a023-ba9859efd80f')
       AWS_SECRET_ACCESS_KEY = credentials('ea358272-78fd-462d-8b7a-457ae5cccffc')
    }

    stages {
      stage('fetch_latest_code') {
        steps {
        git branch: 'master', url: 'https://github.com/SPtraining/Jenkins-Terraform.git'
 }
      }
    
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      stage('Manual Approval') {
            steps {
      input(id: 'manual-approval', message: 'Do you want to proceed?', ok: 'Proceed')
            }
        }

       stage('TF Apply') {
        steps {
          sh 'terraform apply -auto-approve'
        }
      
    } 
  }
}
